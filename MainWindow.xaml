<Window x:Class="TosterNotify.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TosterNotify"
        mc:Ignorable="d"
        Title="Toster Notification" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        
        <Grid.Background>
            <ImageBrush ImageSource="img/bg.jpg"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnClick" Grid.Row="1" Grid.Column="0" Content="Click here" Click="BtnClick_Click" />
        <Button x:Name="btnerror" Grid.Row="1" Grid.Column="1" Content="Error" Click="Btnerror_Click" />
        <Button x:Name="btnWrong" Grid.Row="1" Grid.Column="2" Content="Wrong" Click="BtnWrong_Click" />


    </Grid>
</Window>
